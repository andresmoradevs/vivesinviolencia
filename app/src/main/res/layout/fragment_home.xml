<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/main_icon"/>

    <Button
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/menu_bar"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:elevation="500dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_chat_with_us"/>

    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="200dp"
        android:elevation="500dp"
        android:src="@drawable/logo_fb_blue" />

    <ImageView
        android:id="@+id/intagram_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="25dp"
        android:elevation="500dp"
        android:src="@drawable/logo_insta_bicolor" />

    <ImageView
        android:id="@+id/btnRoutesAtention"
        android:layout_width="180dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="154dp"
        android:elevation="600dp"
        android:src="@drawable/btn_routes_atention" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="0dp"
        android:id="@+id/recycler_view"
        android:layout_below="@+id/main_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="25dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="-75dp"
        android:layout_above="@+id/footer_splash"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-20dp"
        android:elevation="100dp"
        android:cropToPadding="true"
        android:paddingTop="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/illustration_people" />

    <ImageView
        android:id="@+id/footer_splash"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:elevation="2dp"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_footer"/>


</RelativeLayout>
