<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/main_icon"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:src="@drawable/main_icon"/>

    <Button
        android:visibility="gone"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/menu_bar"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <ImageView
        android:id="@+id/chat_icon"
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:elevation="500dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/btn_chat_with_us"/>

    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="200dp"
        android:elevation="500dp"
        android:src="@drawable/logo_fb_blue" />

    <ImageView
        android:id="@+id/instagram_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="85dp"
        android:elevation="500dp"
        android:src="@drawable/logo_insta_bicolor" />

    <ImageView
        android:id="@+id/btnEmergencyCall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="335dp"
        android:layout_marginStart="200dp"
        android:elevation="600dp"
        android:src="@drawable/llamada_de_emergencia_rosa" />
    <ImageView
        android:id="@+id/btnRoutes"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="295dp"
        android:elevation="600dp"
        android:src="@drawable/btn_routes_atention" />
    <ImageView
        android:id="@+id/btnRights"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="255dp"
        android:elevation="600dp"
        android:src="@drawable/btn_rights" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="30dp"
        android:id="@+id/recycler_view"
        android:layout_below="@+id/main_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="25dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_above="@+id/footer_splash"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:elevation="100dp"
        android:cropToPadding="true"
        android:paddingTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/illustrated_strip" />

    <ImageView
        android:id="@+id/footer_splash"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:elevation="2dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/splash_footer"/>


</RelativeLayout>
